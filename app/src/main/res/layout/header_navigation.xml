<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/navigation_background"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/navigation_background"/>

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="ورود / ثبت نام"
        android:paddingRight="8dp"
        android:layout_alignBottom="@id/navigation_background"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/font2"/>

    <TextView
        android:id="@+id/btn_loged_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="اسم کاربر "
        android:visibility="gone"
        android:paddingRight="8dp"
        android:layout_alignBottom="@id/navigation_background"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:fontFamily="@font/font2"/>

</RelativeLayout>